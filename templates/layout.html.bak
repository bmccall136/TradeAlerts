{# templates/layout.html #}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>{% block title %}ðŸš€ TradeAlerts ðŸš€{% endblock %}</title>

  {# â”€â”€â”€ 1) Bootstrap CSS â”€â”€â”€ #}
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />

  {# â”€â”€â”€ 2) Bootstrap Icons â”€â”€â”€ #}
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
    rel="stylesheet"
  />

  {# â”€â”€â”€ 3) Your Custom CSS â”€â”€â”€ #}
  <link
    rel="stylesheet"
    href="{{ url_for('static', filename='style.css') }}"
  />

  {# (Optional) Insert additional head blocks from child templates #}
  {% block head %}{% endblock %}
</head>
<body class="black-bg text-light">

  {# â”€â”€â”€ NAVBAR â”€â”€â”€ #}
  <nav class="navbar navbar-expand-lg navbar-dark bg-black py-2">
    <div class="container-fluid">

      {# 1) Left side navigation links #}
      <div class="navbar-nav">
        <a
          class="nav-link{% if request.path == '/' %} active{% endif %}"
          href="{{ url_for('index') }}"
        >
          Alerts
        </a>
        <a
          class="nav-link{% if request.path == '/simulation' %} active{% endif %}"
          href="{{ url_for('simulation') }}"
        >
          Simulation
        </a>
        <a
          class="nav-link{% if request.path == '/backtest' %} active{% endif %}"
          href="{{ url_for('backtest_view') }}"
        >
          Backtest
        </a>
     </div>

      {# 2) Spacer: this pushes the title to the center #}
      <div class="mx-auto"></div>

      {# 3) Right side shortcut buttons #}
		<div class="d-flex">
			<form action="{{ url_for('run_checkpoint') }}" method="get" class="me-2">
				<button type="submit" class="btn btn-sm btn-warning btn-fixed">âœ… Checkpoint</button>
			</form>
			<form action="{{ url_for('launch_auth') }}" method="post" class="me-2">
				<button type="submit" class="btn btn-sm btn-warning btn-fixed">ðŸ”‘ E*TRADE Auth</button>
			</form>
			<form action="{{ url_for('nuke_db') }}" method="post">
				<button type="submit" class="btn btn-sm btn-danger btn-fixed">ðŸ’£ Nuke DB</button>
			</form>
		</div>



      {# 4) Centered Title (absolute positioned over the navbar) #}
<!-- In layout.html, replace the centered title DIV with this: -->
		<div class="trade-alerts-title position-absolute top-50 start-50 translate-middle text-center">
		  ðŸš€ <b>TradeAlerts</b> ðŸš€
		</div>


    </div>
  </nav>

  {# â”€â”€â”€ MAIN CONTENT AREA â”€â”€â”€ #}
  <main class="container py-4">
    {% block content %}{% endblock %}
  </main>

  {# â”€â”€â”€ Bootstrap JS (optional, only if you need dropdowns or other JS components) â”€â”€â”€ #}
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
  ></script>
<script>
function buyStock(btn) {
  const row = btn.closest("tr");
  const symbol = row.querySelector("td:nth-child(2)")?.textContent.trim();
  const qty = parseInt(row.querySelector(".qty-input")?.value || 1);

  if (!symbol || isNaN(qty)) {
    alert("Invalid buy request");
    return;
  }

  fetch("/simulation/buy", {
    method: "POST",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify({ symbol, qty }),
  })
    .then((res) => {
      if (res.ok) location.reload();
      else alert("Buy failed.");
    })
    .catch((err) => {
      console.error("Buy error:", err);
    });
}

function clearAlert(btn) {
  const row = btn.closest("tr");
  const alertId = row.dataset.id;

  if (!alertId) {
    alert("Missing alert ID");
    return;
  }

  fetch(`/clear/${alertId}`, { method: "POST" })
    .then((res) => {
      if (res.ok) row.remove();
      else alert("Clear failed.");
    })
    .catch((err) => {
      console.error("Clear error:", err);
    });
}
</script>

</body>
</html>
