{# File: templates/simulation.html #}
{% extends "layout.html" %}
{% block content %}
{% for h in holdings %}
  <!-- DEBUG: {{ h }} -->
{% endfor %}

<div class="container">

  <!-- 1) Center the title + “Reset Simulation” button -->
  <div class="simulation-header" style="text-align:center; margin-bottom: 20px;">
    <h1>Simulation Dashboard</h1>
    <form action="{{ url_for('reset_simulation') }}" method="post" style="display:inline;">
      <button class="reset-btn" type="submit">Reset Simulation</button>
    </form>
  </div>

  <!-- 2) Show Cash, Unrealized P&L, Realized P&L -->
  <div class="simulation-summary" style="text-align:center; margin-bottom: 30px;">
    <p><strong>Cash:</strong> ${{ '%.2f'|format(cash) }}</p>
    <p><strong>Unrealized P&amp;L:</strong> ${{ '%.2f'|format(unrealized_pnl) }}</p>
    <p><strong>Realized P&amp;L:</strong> ${{ '%.2f'|format(realized_pnl) }}</p>
  </div>

  <!-- 3) Holdings Table -->
  <h2>Holdings</h2>
  <table class="alerts-table simulation-table">
    <colgroup>
      <col style="width: 8%;" />   <!-- Symbol -->
      <col style="width: 10%;" />  <!-- Last Price -->
      <col style="width: 8%;" />   <!-- Change -->
      <col style="width: 8%;" />   <!-- Change % -->
      <col style="width: 6%;" />   <!-- Qty -->
      <col style="width: 10%;" />  <!-- Price Paid -->
      <col style="width: 10%;" />  <!-- Day Gain/Loss -->
      <col style="width: 10%;" />  <!-- Total Gain/Loss -->
      <col style="width: 10%;" />  <!-- Value -->
      <col style="width: 10%;" />  <!-- Action -->
    </colgroup>
    <thead>
      <tr>
        <th>Symbol</th>
        <th>Last Price</th>
        <th>Change</th>
        <th>Change %</th>
        <th>Qty</th>
        <th>Price Paid</th>
        <th>Day Gain/Loss</th>
        <th>Total Gain/Loss</th>
        <th>Value</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
{% for h in holdings %}
<tr>
  <td>{{ h.symbol }}</td>
  <td>${{ '%.2f'|format(h.last_price) }}</td>
  <td>${{ '%.2f'|format(h.change) }}</td>
  <td>{{ '%.2f'|format(h.change_pct) }}%</td>
  <td>{{ h.qty }}</td>
  <td>${{ '%.2f'|format(h.avg_cost) }}</td>
  <td class="{% if h.day_gain < 0 %}gain-negative{% else %}gain-positive{% endif %}">
    ${{ '%.2f'|format(h.day_gain) }}
  </td>
  <td>${{ '%.2f'|format(h.total_gain) }}</td>
  <td>${{ '%.2f'|format(h.value) }}</td>
  <td>
    <input type="number" name="qty" value="1" min="1" class="qty-input">
    <button class="btn-clear" onclick="sellStock('{{ h.symbol }}', this)">Sell</button>
  </td>
</tr>
{% endfor %}

    </tbody>
  </table>

  <!-- 4) Trade History -->
  <h2 style="margin-top: 40px;">Trade History</h2>
  <table class="alerts-table trade-history-table">
    <thead>
      <tr>
        <th>Time</th>
        <th>Symbol</th>
        <th>Action</th>
        <th>Qty</th>
        <th>Price</th>
        <th>P/L</th>
      </tr>
    </thead>
    <tbody>
      {% for t in history %}
      <tr>
        <td>{{ t.time }}</td>
        <td>{{ t.symbol }}</td>
        <td>{{ t.action }}</td>
        <td>{{ t.qty }}</td>
        <td>{{ t.price }}</td>
        <td>
          {% if t.pl != "-" %}
            {{ t.pl }}
          {% else %}
            -
          {% endif %}
        </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>

</div>

<script>
function buyStock(symbol, button) {
  const row = button.closest('tr');
  const qtyInput = row.querySelector('.qty-input');
  const qty = qtyInput ? parseInt(qtyInput.value) : 1;

  fetch('/simulation/buy', {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({ symbol: symbol, qty: qty })
  })
  .then(response => response.json())
  .then(data => {
    if (data.success) {
      alert(`Bought ${symbol} x${qty}\nNew cash balance: $${data.cash.toFixed(2)}`);
      location.reload();
    } else {
      alert(`Buy failed: ${data.error}`);
    }
  })
  .catch(err => {
    alert('Buy request error');
    console.error(err);
  });
}

function sellStock(symbol, button) {
  const row = button.closest('tr');
  const qtyInput = row.querySelector('.qty-input');
  const qty = qtyInput ? parseInt(qtyInput.value) : 1;

  // Grab the “Last Price” from the 2nd <td> in this <tr> (strip out the “$”)
  const priceStr = row.querySelector('td:nth-child(2)').textContent.replace('$','');
  const price = parseFloat(priceStr) || 0.0;

  fetch('/simulation/sell', {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({ symbol: symbol, qty: qty, price: price })
  })
  .then(response => response.json())
  .then(data => {
    if (data.success) {
      alert(`Sold ${symbol} x${qty}\nNew cash: $${data.cash.toFixed(2)}\nRealized P/L: $${data.realized_pl.toFixed(2)}`);
      location.reload();
    } else {
      alert(`Sell failed: ${data.error}`);
    }
  })
  .catch(err => {
    alert('Sell request error');
    console.error(err);
  });
}
</script>
{% endblock %}
